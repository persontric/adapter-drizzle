{
	"compilerOptions": {
		"module": "esnext",
		"target": "esnext",
		"moduleResolution": "nodenext",
		"moduleDetection": "force",
		"noEmit": true,
		"composite": false,
		"strict": true,
		"downlevelIteration": true,
		"skipLibCheck": true,
		"allowSyntheticDefaultImports": true,
		"forceConsistentCasingInFileNames": true,
		"esModuleInterop": true,
		"allowJs": true,
		"types": [
			"bun-types" // add Bun global
		]
	},
	"include": [
		"driver/*",
		"index.ts"
	]
}
